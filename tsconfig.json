{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "lib/esm",
		"target": "ES2020",
		"module": "ES6",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"declaration": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"lib": [
			"ES2020", "DOM", "DOM.Iterable"
		],
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src",
	],
}