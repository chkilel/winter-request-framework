{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "lib/esm",
		"target": "ES2020",
		"module": "ES6",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"declaration": true,
		"sourceMap": true,
		"lib": [
			"DOM", "ES2020", "DOM.Iterable"
		],
		//"types": ["node"],
		"typeRoots": ["node_modules/@types", "src/types"]
	},
	"include": [
		"./src"
	],
	"exclude": [
		"node_modules/**"
	],
}